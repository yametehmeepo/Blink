<view class="container">
    <view class="imagewrap">
        <image class="music-image {{currentPlay?'rotation':''}}" src="{{image}}" mode="widthFix"/>
        <image class="playBtn" src="{{!currentPlay?playSrc:pauseSrc}}" bind:tap="onPlayTap"/>
        <image class="tag" src="/component/images/music@tag.png" mode="widthFix"/>
    </view>
    <text class="content">{{content}}</text>
</view>