.container {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.08);
    width: 330rpx;
    margin-bottom: 30rpx;
}

.top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 80rpx;
    align-items: center;
    padding: 0 20rpx;
}

.middle {
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.middle-movie {
    width: 330rpx;
    height: 240rpx;
}

.middle-music {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 20rpx 0;
}

.bottom {
    padding: 34rpx 20rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999999;
    height: 150rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    box-sizing: border-box;
}