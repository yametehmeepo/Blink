.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    width: 100%;
    display: flex;
    height: 100rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #f3f3f3;
    padding: 0 30rpx 0 26rpx;
    box-sizing: border-box;
}

.right {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.like {
    margin-right: 40rpx;
}

.navi {
    position: absolute;
    bottom: 45rpx;
}

.button-img {
    width: 28rpx;
    height: 28rpx;
}